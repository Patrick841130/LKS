{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpiryInMinutes": 60
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}",
    "Redis": "${REDIS_CONNECTION_STRING}"
  },
  "CorsSettings": {
    "AllowedOrigins": ["${ALLOWED_ORIGINS}"],
    "AllowCredentials": true
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "RequestsPerMinute": 100,
    "BurstSize": 20
  },
  "Blockchain": {
    "RpcEndpoint": "${BLOCKCHAIN_RPC_ENDPOINT}",
    "WebSocketEndpoint": "${BLOCKCHAIN_WEBSOCKET_ENDPOINT}",
    "NetworkId": "${BLOCKCHAIN_NETWORK_ID}"
  },
  "NodeBackend": {
    "BaseUrl": "${NODE_BACKEND_URL}"
  },
  "Security": {
    "EnableHttpsRedirection": true,
    "EnableHsts": true,
    "RequireHttps": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;"
  }
}
