# LKS Network Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Database Configuration
DB_PASSWORD=YourSecurePassword123!
DB_USER=sa
DB_SERVER=lks-database
DB_NAME=LKSNetwork

# Blockchain Configuration
LKS_COIN_CONTRACT=0x742d35Cc6634C0532925a3b8D4C9db96
PAYMENT_SYSTEM_CONTRACT=0x1234567890123456789012345678901234567890
LKS_NODE_URL=http://lks-node:8545
CHAIN_ID=1337

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
REDIS_PASSWORD=your-redis-password-here
GRAFANA_PASSWORD=your-grafana-admin-password

# API Configuration
CORS_ORIGIN=https://lks-network.com,https://www.lks-network.com
API_RATE_LIMIT=1000
MAX_CONNECTIONS=100

# External API Keys (for wallet integrations)
XUMM_API_KEY=your-xumm-api-key
XUMM_API_SECRET=your-xumm-api-secret
ALCHEMY_API_KEY=your-alchemy-api-key
INFURA_PROJECT_ID=your-infura-project-id

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/lks-network.crt
SSL_KEY_PATH=/etc/nginx/ssl/lks-network.key

# Monitoring
PROMETHEUS_RETENTION=30d
LOG_LEVEL=info
METRICS_ENABLED=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=lks-network-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Performance Tuning
NODE_CACHE_SIZE=2048
DB_CONNECTION_POOL_SIZE=50
REDIS_MAX_MEMORY=1gb
